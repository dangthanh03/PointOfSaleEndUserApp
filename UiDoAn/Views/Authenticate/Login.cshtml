@model UiDoAn.Models.DTO.LoginModel

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="mb-4">Login</h2>
                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <label for="Username">Username</label>
                        <input type="text" class="form-control" id="Username" name="Username" asp-for="Username" required>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>

                <!-- Hiển thị thông báo lỗi nếu có -->
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        @Html.Raw(ViewData["ErrorMessage"])
                    </div>
                }

                <!-- Button to navigate to registration page -->
                <div class="mt-3">
                    <a href="/Authenticate/Register" class="btn btn-secondary">Register</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
